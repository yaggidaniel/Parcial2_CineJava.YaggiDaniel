<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootMisEntradas"
      alignment="TOP_CENTER"
      prefHeight="600.0"
      prefWidth="800.0"
      spacing="20.0"
      styleClass="fondo-crema"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cine.controlador.MisEntradasController">

    <children>

        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="btnVolver"
                        text="Volver a cartelera"
                        onAction="#volverACartelera"
                        styleClass="boton-secundario"/>

                <ImageView fitHeight="40.0" preserveRatio="true">
                    <image>
                        <Image url="@recursos/cartelera.png"/>
                    </image>
                </ImageView>
            </children>
            <padding>
                <Insets top="10" right="20" bottom="0" left="20"/>
            </padding>
        </HBox>

        <Label text="Mis entradas"
               alignment="CENTER"
               textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>

        <ListView fx:id="listaEntradas"
                  prefHeight="450.0"
                  prefWidth="700.0"/>

    </children>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

</VBox>
