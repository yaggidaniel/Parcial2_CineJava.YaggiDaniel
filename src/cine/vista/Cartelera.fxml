<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER"
      prefHeight="751.0"
      prefWidth="1023.0"
      spacing="20"
      styleClass="fondo-crema"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cine.controlador.CarteleraController">

    <children>

        <HBox spacing="20" alignment="CENTER" prefHeight="70.0">
            <children>

                <Button fx:id="btnMisEntradas"
                        text="Mis entradas"
                        onAction="#verMisEntradas"
                        styleClass="boton-secundario"/>

                <Region HBox.hgrow="ALWAYS"/>

                <ImageView fitHeight="50" preserveRatio="true">
                    <image>
                        <Image url="@recursos/cartelera.png"/>
                    </image>
                </ImageView>

                <Region HBox.hgrow="ALWAYS"/>

                <Button fx:id="cerrarSesion"
                        text="Cerrar sesión"
                        onAction="#cerrarSesion"
                        styleClass="boton-secundario"/>
            </children>
        </HBox>

        <Label alignment="CENTER"
               prefHeight="30"
               prefWidth="865.0"
               text="Ahora en cartelera">
            <font>
                <Font name="System Bold" size="25.0"/>
            </font>
        </Label>

        <HBox fx:id="contenedorFlechas"
              alignment="CENTER"
              prefHeight="511.0"
              prefWidth="1019.0"
              spacing="20">

            <children>

                <Button fx:id="btnPrev"
                        alignment="CENTER"
                        onAction="#moverIzquierda"
                        prefHeight="80"
                        prefWidth="50"
                        styleClass="btn-nav"
                        text="⟨"/>

                <ScrollPane fx:id="scrollCarrusel"
                            fitToWidth="false"
                            fitToHeight="true"
                            hbarPolicy="NEVER"
                            vbarPolicy="NEVER"
                            prefHeight="404.0"
                            prefWidth="800.0"
                            styleClass="fondo-crema">

                    <content>
                        <HBox fx:id="carruselBox"
                              alignment="CENTER_LEFT"
                              spacing="20">

                            <padding>
                                <Insets top="20" right="20" bottom="20" left="20"/>
                            </padding>

                        </HBox>
                    </content>

                </ScrollPane>

                <Button fx:id="btnNext"
                        alignment="CENTER"
                        onAction="#moverDerecha"
                        prefHeight="80"
                        prefWidth="50"
                        styleClass="btn-nav"
                        text="⟩"/>

            </children>
        </HBox>

    </children>
</VBox>
